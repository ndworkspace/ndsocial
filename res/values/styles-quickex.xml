<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>



    <style name="tabbar_title">
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">-25dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="userhead_name">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">3.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dm_listview" />

    <style name="title_shadow_text">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/dm_title_text_color</item>
        <item name="android:padding">3.0dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="history_traffic_text">
        <item name="android:textSize">@dimen/dm_history_traffic_text_size</item>
        <item name="android:textColor">@color/dm_history_traffic_statistic_text_color_1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="dm_shadow_btn">
        <item name="android:shadowColor">#ffafafaf</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

</resources>