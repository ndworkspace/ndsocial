<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/left_btn"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/title_btn_right"
            android:text="@string/cancel"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/card_edit_title"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/title_btn_right"
            android:text="@string/save"
            android:textColor="#ffffffff" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editor_name" />
                
                <TextView
                    android:layout_width="6dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dip"
                    android:text="*"
                    android:textSize="16dip"
                    android:textColor="@color/Red"
                    android:layout_gravity="bottom"/>
                
                <EditText
                    android:id="@+id/name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/input_name_hint"
                    android:textColor="#000000"
                    style="@style/card_editor_style"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_cellphone"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editor_cellphone" />
                
                <TextView
                    android:layout_width="6dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dip"
                    android:text="*"
                    android:textSize="16dip"
                    android:textColor="@color/Red"
                    android:layout_gravity="bottom"/>

                <EditText
                    android:id="@+id/mobile_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/input_cell_hint"
                    android:inputType="phone"
                    android:textColor="#000000"
                    style="@style/card_editor_style" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_company"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editor_name" />                

                
                <EditText
                    android:id="@+id/company_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/input_company_hint"
                    android:textColor="#000000"
                    style="@style/card_editor_style"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_title"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editor_title" />

                <EditText
                    android:id="@+id/occupation_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/input_title_hint"
                    android:textColor="#000000"
                    style="@style/card_editor_style" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="30dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_telephone"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editor_telephone" />

                <EditText
                    android:id="@+id/phone_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/input_telephone_hint"
                    android:inputType="phone"
                    android:textColor="#000000"
                    style="@style/card_editor_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editor_email" />

                <EditText
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/input_email_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    style="@style/card_editor_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_addr"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editor_addr" />

                <EditText
                    android:id="@+id/address_id"
                    android:layout_width="match_parent"                   
                    android:layout_height="wrap_content"                    
                    android:gravity="center_vertical"
                    android:hint="@string/input_addr_hint"
                    android:textColor="#000000"
                    style="@style/card_editor_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:layout_marginBottom="30dip"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/select_model" >
                <ImageView
                    android:id="@+id/iv_template"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editor_card_template" />

                <TextView
                    android:id="@+id/model_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/select_template"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
	            <LinearLayout	                
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_marginRight="20dip"
	                android:gravity="right" >
	                <ImageView
	                    android:layout_marginRight="5dip"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/dot_shape" />
	                <ImageView
	                    android:layout_marginRight="5dip"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/dot_shape" />
	                <ImageView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/dot_shape" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>