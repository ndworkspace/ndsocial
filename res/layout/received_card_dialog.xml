<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card1"
    android:id="@+id/recieve_card"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cust_name_label"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_str" />

        <TextView
            android:id="@+id/cust_name_text"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/company_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cust_company_label"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_str" />

        <TextView
            android:id="@+id/cust_company_text"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cust_title_label"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/occupation_str" />

        <TextView
            android:id="@+id/cust_title_text"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mobile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cust_mobile_label"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_str" />

        <TextView
            android:id="@+id/cust_mobile_text"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cust_phone_label"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_str" />

        <TextView
            android:id="@+id/cust_phone_text"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cust_email_label"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_str" />

        <TextView
            android:id="@+id/cust_email_text"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addr_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cust_addr_label"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addr_str" />

        <TextView
            android:id="@+id/cust_addr_text"
            style="@style/card_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" />
    </LinearLayout>

</LinearLayout>