<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="65dip"
    android:background="@drawable/zapya_common_list_selector"
    android:orientation="horizontal" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="65dip"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14.0dip" >

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/user_avatar" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_toRightOf="@id/rl_layout"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Unknown"
        android:textColor="#ffa0a0a0"
        android:textSize="15dip" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:background="@drawable/invite_list_item_bg" />
    
    <TextView
        android:id="@+id/tv_kickout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text="@string/kick_out"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="8dip"
        android:paddingBottom="8dip"
        android:background="@drawable/import_new_bg"
        android:textColor="#ff303030"
        android:textSize="18dip" />

</RelativeLayout>