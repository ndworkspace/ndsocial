<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
  
 
		
    <RelativeLayout
        android:id="@+id/custom_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/lauch_title_bg"
        android:visibility="visible"
        android:gravity="center_vertical"       
        android:layout_alignParentTop="true" >


         <ImageButton
            android:id="@+id/custom_reback_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_btn"
            android:onClick="custom_back"/>
      

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/customer"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    </RelativeLayout>

     <FrameLayout
        android:id="@+id/set_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/st_bg_bg"/>
        
         <ImageView
         	  android:id="@+id/sandglass"
         	  android:layout_width="160dp"
         	  android:layout_height="160dp"
         	  android:layout_marginTop="50dp"
         	  android:layout_gravity="center_horizontal"
         	  android:src="@drawable/st_bg"/>
         
          <TextView
                android:id="@+id/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
               	android:layout_gravity="center_horizontal"
                android:text="@string/chose_valid_time"
            	android:textColor="@color/Wheat"
                android:textSize="26sp" />
        
    </FrameLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chose_time"
        android:textColor="@color/Wheat"
        android:textSize="24.0sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="280dp"/>
    
     <FrameLayout
            android:id="@+id/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="270dp">

            <ImageButton
                android:id="@+id/sure_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:background="@color/transparent"
                android:src="@drawable/custom_sure_state" />

            <TextView
                android:id="@+id/button_sure_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/custom_button_text"
            	android:textColor="@color/white"
                android:textSize="20dip" />
        </FrameLayout>
    <LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:layout_alignParentBottom="true">
  	<LinearLayout
  	    android:id="@+id/time_layout"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="320dp">
 	   
  	    <LinearLayout 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:orientation="vertical">
  	        <cn.nd.social.wheel.WheelView android:id="@+id/hour"
 			android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"/>
  	        <TextView 
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_gravity="center_horizontal"
  	            android:text="@string/hours_single"
  	            android:textColor="@color/white"
  	            android:textSize="32.0sp"/>
  	    </LinearLayout>
	  	 <LinearLayout 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:orientation="vertical">
  	        <cn.nd.social.wheel.WheelView android:id="@+id/mins"
 			android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"/>
  	        <TextView 
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_gravity="center_horizontal"
  	            android:text="@string/mins_single"
  	            android:textColor="@color/white"
  	            android:textSize="32.0sp"/>
  	    </LinearLayout>
		 <LinearLayout 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:orientation="vertical">
  	      	<cn.nd.social.wheel.WheelView android:id="@+id/second"
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"/>
  	        <TextView 
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:layout_gravity="center_horizontal"
  	            android:text="@string/secs_single"
  	            android:textColor="@color/white"
  	            android:textSize="32.0sp"/>
  	    </LinearLayout>
		 
	</LinearLayout>

  	  

</LinearLayout>
</RelativeLayout>