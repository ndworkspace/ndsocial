<?xml version="1.0" encoding="utf-8"?>
<cn.nd.social.prishare.component.CellItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_item_gallery_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="2dip" >

    <FrameLayout
        android:id="@id/thumb"
        android:layout_width="@dimen/grid_item_gallery_thumb_width"
        android:layout_height="@dimen/grid_item_gallery_thumb_height"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@id/icon_background"
            android:layout_width="@dimen/grid_item_gallery_thumb_width"
            android:layout_height="@dimen/grid_item_gallery_thumb_height"
            android:scaleType="fitXY"
            android:src="@drawable/backgroud_cover"
            android:visibility="gone" />

        <ImageView
            android:id="@id/icon"
            android:layout_width="@dimen/grid_item_gallery_thumb_width"
            android:layout_height="@dimen/grid_item_gallery_thumb_height"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:paddingTop="4dip"
            android:scaleType="centerCrop" />
        <!-- android:scaleType="fitXY" -->

        <CheckBox
            android:id="@id/checkbox"
            android:layout_width="@dimen/private_chkbox_size"
            android:layout_height="@dimen/private_chkbox_size"
            android:button="@drawable/qe_multi_checkbox"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible" />
    </FrameLayout>

</cn.nd.social.prishare.component.CellItemView>