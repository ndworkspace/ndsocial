<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view" 
    android:background="@drawable/main_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/main_title_height"
            android:background="@drawable/lauch_title_bg"
            android:gravity="center_vertical"
            android:visibility="visible" >

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_btn"
                android:textColor="#fff"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/title_communicate"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/more_selector" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_my"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button_tableft_selected"
                android:text="@string/mymeeting"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_other"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button_tabright_normal"
                android:text="@string/invitemeeting"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:listSelector="@color/transparent" >
        </ListView>
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="70dip" 
        >
        <Button 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_gravity="center_vertical"
        android:id="@+id/btn_reserve"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="@string/reservemeeting"
        android:background="@drawable/button_bottom"
        />
    </LinearLayout>
        
    </LinearLayout>
    
