<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/download_mgr_group"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dm_history_group_height"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dm_history_group_spliter_left"
        android:layout_marginRight="@dimen/dm_history_group_spliter_left"
        android:background="@drawable/zapya_history_h" />

    <TextView
        android:id="@+id/download_mgr_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/dm_history_group_text_bg_color"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="@dimen/dm_history_group_text_min_width"
        android:text="group"
        android:textColor="@color/dm_history_group_text_color"
        android:textSize="@dimen/dm_history_group_text_size" />

</RelativeLayout>