<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/create_btn"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/connect_actionbar_height"
    android:layout_alignParentLeft="true"
    android:background="@drawable/zapya_common_connect_btn"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/create_image_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dip"
        android:clickable="false"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:scaleType="centerInside"
        android:src="@drawable/common_create_hotspot" />

    <TextView
        android:id="@id/create_text_id"
        style="@style/userhead_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:duplicateParentState="false"
        android:paddingBottom="11.0dip"
        android:text="@string/menu_create" />

</RelativeLayout>