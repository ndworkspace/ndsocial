<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/lauch_title_bg" >

    
     
    <Button
        android:id="@+id/btn_title_back"
        style="@style/th_title_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:background="@drawable/back_btn" />

<!--     <ImageView
        android:id="@+id/iv_back_splitter"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/btn_title_back"
        android:background="@drawable/private_title_button_splitter_left" /> -->

 
    <Button
        android:id="@+id/btn_title_add"
        style="@style/th_title_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/private_title_button_add_select" />

<!--     <ImageView
        android:id="@+id/iv_add_splitter"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/btn_title_add"
        android:background="@drawable/private_title_button_splitter_right" /> -->

    <Button
        android:id="@+id/btn_title_modify"
        style="@style/th_title_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn_title_add"
        android:background="@drawable/private_title_button_modify_select" />
    
    
     <RelativeLayout
         	android:id="@+id/rl_shop"
            android:layout_width="35dip"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_toLeftOf="@id/btn_title_modify">

            <ImageView
                android:id="@+id/shop_car"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"            
                android:src="@drawable/gift_box" />

            <TextView
                android:id="@+id/shop_num"
                android:paddingTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"               
                android:text="@string/shop_count"
                android:textColor="@color/Black" />
      </RelativeLayout>

 

<!--     <ImageView
        android:id="@+id/iv_modify_splitter"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/btn_title_modify"
        android:background="@drawable/private_title_button_splitter_right" /> -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_title_modify"
        android:layout_toRightOf="@id/btn_title_back" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/th_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>