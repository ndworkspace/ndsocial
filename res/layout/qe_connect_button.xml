<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:orientation="vertical" 
        android:id="@id/connect_btn" 
        android:background="@drawable/button_right" 
        android:layout_width="wrap_content" 
        android:layout_height="@dimen/connect_actionbar_height"
        android:layout_alignParentRight="true">
        <ImageView 
            android:id="@id/connect_image_id" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="12dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" 
            android:src="@drawable/zapya_common_connect_image" 
            android:scaleType="centerInside" 
            android:layout_alignParentTop="true" 
            android:layout_centerHorizontal="true" />
        <TextView 
            android:id="@id/connect_user_id" 
            android:paddingBottom="11.0dip" 
            android:duplicateParentState="false" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/connect" 
            android:layout_alignParentBottom="true" 
            android:layout_centerHorizontal="true" 
            style="@style/userhead_name" />
    </RelativeLayout>
</merge>